---
import Base from './Base.astro';
import { type Locale, getTranslations, localePath } from '../i18n';

interface Props {
  title: string;
  description: string;
  locale: Locale;
  pagePath: string;
}

const { title, description, locale, pagePath } = Astro.props;
const t = getTranslations(locale);
---

<Base title={title} description={description} locale={locale} pagePath={pagePath}>
  <div class="docs-layout container">
    <aside class="docs-sidebar">
      <nav>
        <a href={localePath(locale, '/getting-started')}>{t.nav.gettingStarted}</a>
        <a href={localePath(locale, '/docs/')}>{t.nav.commands}</a>
        <a href={localePath(locale, '/docs/configuration')}>{t.nav.configuration}</a>
      </nav>
    </aside>
    <article class="docs-content prose">
      <slot />
    </article>
  </div>
</Base>

<style>
  .docs-layout {
    display: flex;
    gap: var(--space-3xl);
    padding-top: var(--space-2xl);
    padding-bottom: var(--space-3xl);
  }

  .docs-sidebar {
    width: var(--sidebar-width);
    flex-shrink: 0;
    position: sticky;
    top: calc(3.5rem + var(--space-xl));
    align-self: flex-start;
  }

  .docs-sidebar nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .docs-sidebar a {
    display: block;
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .docs-sidebar a:hover {
    color: var(--color-primary);
    background: var(--color-surface);
    text-decoration: none;
  }

  .docs-content {
    flex: 1;
    min-width: 0;
  }

  @media (max-width: 768px) {
    .docs-layout {
      flex-direction: column;
      gap: var(--space-lg);
    }

    .docs-sidebar {
      width: 100%;
      position: static;
    }

    .docs-sidebar nav {
      flex-direction: row;
      flex-wrap: wrap;
    }
  }
</style>

---
import { type Locale, getTranslations, localePath, otherLocale } from '../i18n';

interface Props {
  locale: Locale;
  pagePath: string;
}

const { locale, pagePath } = Astro.props;
const t = getTranslations(locale);
const other = otherLocale(locale);
---

<header class="header">
  <div class="header-inner container">
    <a href={localePath(locale, '/')} class="logo">
      <span class="logo-icon">âŒ˜</span>
      abacus-cli
    </a>
    <nav class="header-nav">
      <a href={localePath(locale, '/getting-started')}>{t.nav.gettingStarted}</a>
      <a href={localePath(locale, '/docs/')}>{t.nav.commands}</a>
      <a href={localePath(locale, '/docs/configuration')}>{t.nav.configuration}</a>
      <a href="https://github.com/wassertim/abacus-cli" class="nav-github">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8z"/></svg>
        {t.nav.github}
      </a>
      <a href={localePath(other, pagePath)} class="lang-switch">{other.toUpperCase()}</a>
    </nav>
  </div>
</header>

<style>
  .header {
    border-bottom: 1px solid var(--color-border);
    background: rgba(10, 10, 11, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 3.5rem;
  }

  .logo {
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--color-text);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .logo:hover {
    text-decoration: none;
  }

  .logo-icon {
    font-size: 1.3rem;
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  .header-nav a {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    font-weight: 500;
  }

  .header-nav a:hover {
    color: var(--color-primary);
    text-decoration: none;
  }

  .nav-github {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
  }

  .lang-switch {
    padding: 0.2rem 0.6rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-size: 0.8rem !important;
    font-weight: 600 !important;
    letter-spacing: 0.05em;
  }

  .lang-switch:hover {
    border-color: var(--color-primary);
    color: var(--color-primary) !important;
  }

  @media (max-width: 768px) {
    .header-nav {
      gap: var(--space-md);
    }

    .header-nav a:not(.lang-switch):not(.nav-github) {
      display: none;
    }
  }
</style>

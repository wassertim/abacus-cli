---
import { type Locale, getTranslations, localePath } from '../i18n';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getTranslations(locale);
---

<section class="hero">
  <div class="hero-inner container">
    <h1>{t.home.title}</h1>
    <p class="hero-subtitle">{t.home.subtitle}</p>
    <p class="hero-desc">{t.home.description}</p>
    <div class="hero-install">
      <pre><code>npm install -g abacus-cli</code></pre>
    </div>
    <div class="hero-actions">
      <a href={localePath(locale, '/getting-started')} class="btn btn-primary">{t.home.install}</a>
      <a href={localePath(locale, '/docs/')} class="btn btn-outline">{t.home.viewDocs}</a>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: var(--space-3xl) 0;
    text-align: center;
  }

  .hero-inner {
    max-width: 42rem;
  }

  .hero h1 {
    font-size: 3rem;
    font-family: var(--font-mono);
    margin-bottom: var(--space-md);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text);
    margin-bottom: var(--space-sm);
  }

  .hero-desc {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-xl);
  }

  .hero-install {
    margin-bottom: var(--space-xl);
  }

  .hero-install pre {
    display: inline-block;
    padding: var(--space-sm) var(--space-lg);
    font-size: 0.95rem;
  }

  .hero-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
  }

  .btn {
    display: inline-block;
    padding: 0.6rem 1.5rem;
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: 0.95rem;
    transition: background 0.15s, border-color 0.15s;
  }

  .btn:hover {
    text-decoration: none;
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--color-primary-hover);
  }

  .btn-outline {
    border: 1px solid var(--color-border);
    color: var(--color-text);
  }

  .btn-outline:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }
  }
</style>
